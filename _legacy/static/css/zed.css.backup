:root {
    /* Light theme (default) */
    --bg-color: #fefefe;
    --text-color: #1a1a1a;
    --sidebar-bg: #f8f8f8;
    --border-color: #e8e8e8;
    --muted-color: #888888;
    --accent-color: #0066cc;
    --code-bg: #f5f5f5;
    --selection-bg: #e8f0fe;
    --font-ui: -apple-system, BlinkMacSystemFont, "Segoe UI", system-ui, sans-serif;
    --font-display: -apple-system, BlinkMacSystemFont, "Segoe UI", system-ui, sans-serif;
    --font-mono: "SF Mono", "JetBrains Mono", "Fira Code", monospace;
}

/* Dark theme support */
[data-theme="dark"] {
    --bg-color: #0e0e10;
    --text-color: #e4e4e7;
    --sidebar-bg: #141416;
    --border-color: #27272a;
    --muted-color: #71717a;
    --accent-color: #58a6ff;
    --code-bg: #1a1a1a;
    --selection-bg: #1e40af;
}

/* Auto dark mode */
@media (prefers-color-scheme: dark) {
    :root:not([data-theme="light"]) {
        --bg-color: #0e0e10;
        --text-color: #e4e4e7;
        --sidebar-bg: #141416;
        --border-color: #27272a;
        --muted-color: #71717a;
        --accent-color: #58a6ff;
        --code-bg: #1a1a1a;
        --selection-bg: #1e40af;
    }
}

* {
    box-sizing: border-box;
}

html {
    scroll-behavior: smooth;
}

body {
    margin: 0;
    padding: 0;
    font-family: var(--font-ui);
    background: var(--bg-color);
    color: var(--text-color);
    line-height: 1.7;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

/* Background decoration for iA Writer aesthetic */
.background-decoration {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
    opacity: 0.03;
    background:
        linear-gradient(90deg, transparent 49.5%, var(--border-color) 50%, transparent 50.5%),
        linear-gradient(transparent 49.5%, var(--border-color) 50%, transparent 50.5%);
    background-size: 4rem 4rem, 4rem 4rem;
}

/* Sidebar */
.sidebar {
    position: fixed;
    left: 0;
    top: 0;
    bottom: 0;
    width: 260px;
    background: var(--sidebar-bg);
    border-right: 1px solid var(--border-color);
    display: flex;
    flex-direction: column;
    overflow-y: auto;
    z-index: 100;
    padding: 2rem 0;
}

.sidebar-header {
    padding: 0 2rem 1.5rem 2rem;
    border-bottom: 1px solid var(--border-color);
    margin-bottom: 1.5rem;
}

.sidebar-title {
    font-size: 1.2rem;
    font-weight: 600;
    letter-spacing: -0.01em;
    color: var(--text-color);
    display: block;
}

.sidebar-subtitle {
    font-size: 0.8rem;
    color: var(--muted-color);
    margin-top: 0.25rem;
    letter-spacing: 0.02em;
}

/* Search container */
.search-container {
    padding: 0 2rem 1.5rem 2rem;
    border-bottom: 1px solid var(--border-color);
    margin-bottom: 1.5rem;
}

.search-input {
    width: 100%;
    padding: 0.5rem 0.75rem;
    border: 1px solid var(--border-color);
    border-radius: 6px;
    background: transparent;
    color: var(--text-color);
    font-size: 0.9rem;
    font-family: var(--font-ui);
    transition: border-color 0.15s ease;
    outline: none;
}

.search-input:focus {
    border-color: var(--accent-color);
}

/* Navigation */
.sidebar-nav {
    padding: 0 1rem;
    flex: 1;
}

.nav-group {
    margin-bottom: 1.5rem;
}

.nav-group-title {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--muted-color);
    font-weight: 600;
    padding: 0.5rem 0.75rem;
    margin-bottom: 0.25rem;
}

.nav-item {
    display: block;
    padding: 0.5rem 0.75rem;
    color: var(--text-color);
    text-decoration: none;
    border-radius: 6px;
    font-size: 0.95rem;
    transition: background-color 0.15s ease, color 0.15s ease;
}

.nav-item:hover {
    background-color: var(--code-bg);
    text-decoration: none;
}

.nav-item.active {
    background-color: var(--code-bg);
    color: var(--accent-color);
    font-weight: 500;
}

/* Main content area */
.main-content {
    margin-left: 260px;
    padding: 3rem 2rem;
    min-height: 100vh;
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.content-wrapper {
    width: 100%;
    max-width: 680px; /* Optimal reading width */
    margin: 0 auto;
}

/* Typography */
h1 {
    font-family: var(--font-display);
    font-size: 2.5rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    color: var(--text-color);
    margin: 2rem 0 1.5rem 0;
    line-height: 1.2;
    word-break: break-word;
}

h2 {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 600;
    letter-spacing: -0.01em;
    color: var(--text-color);
    margin: 2.5rem 0 1rem 0;
    line-height: 1.3;
}

h3 {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--text-color);
    margin: 2rem 0 0.75rem 0;
    line-height: 1.4;
}

h4 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-color);
    margin: 2rem 0 0.75rem 0;
}

p {
    margin: 1.25rem 0;
    color: var(--text-color);
    font-size: 1rem;
    line-height: 1.7;
}

strong {
    font-weight: 600;
    color: var(--text-color);
}

em {
    font-style: italic;
}

a {
    color: var(--accent-color);
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
    transition: none;
}

a:hover {
    text-decoration-thickness: 2px;
}

code {
    font-family: var(--font-mono);
    font-size: 0.875em;
    background: var(--code-bg);
    padding: 0.2em 0.4em;
    border-radius: 4px;
    color: var(--text-color);
}

pre {
    background: var(--code-bg);
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    border: 1px solid var(--border-color);
    margin: 2rem 0;
}

pre code {
    background: none;
    padding: 0;
    font-size: 0.9rem;
}

hr {
    border: none;
    height: 1px;
    background: var(--border-color);
    margin: 3rem 0 2rem 0;
}

blockquote {
    border-left: 3px solid var(--border-color);
    margin: 2rem 0;
    padding: 0.5rem 0 0.5rem 1.5rem;
    color: var(--muted-color);
    font-style: italic;
}

/* List styling */
ul, ol {
    margin: 1.25rem 0;
    padding-left: 1.5rem;
}

li {
    margin: 0.5rem 0;
    line-height: 1.5;
}

/* Article listing on homepage */
.poem-list {
    list-style: none;
    padding: 0;
    margin: 2rem 0;
}

.poem-list-item {
    padding: 1rem 0;
    border-bottom: 1px solid var(--border-color);
    position: relative;
}

.poem-list-item:last-child {
    border-bottom: none;
}

.poem-list-item h2 {
    font-size: 1.1rem;
    margin: 0 0 0.25rem 0;
    font-weight: 600;
}

.poem-list-item h2 a {
    text-decoration: none;
}

.poem-list-item h2 a:hover {
    text-decoration: underline;
}

.poem-list-item p {
    font-size: 0.95rem;
    margin: 0.25rem 0 0.5rem 0;
    color: var(--muted-color);
    line-height: 1.6;
}

.poem-meta {
    display: flex;
    gap: 0.75rem;
    font-size: 0.8rem;
    color: var(--muted-color);
    font-family: var(--font-mono);
}

.poem-meta a {
    color: var(--muted-color);
    text-decoration: none;
}

.poem-meta a:hover {
    text-decoration: underline;
}

/* Poem content styling */
.poem-content {
    padding: 1.5rem 0;
}

.poem-content p {
    font-size: 1.05rem;
    line-height: 1.8;
    white-space: pre-line;
    margin: 0.5rem 0 1.25rem 0;
}

.poem-content .subtitle {
    font-family: var(--font-ui);
    font-size: 0.9rem;
    color: var(--muted-color);
    margin-bottom: 2rem 0 1.5rem 0;
    font-style: italic;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    padding-left: 0.2em;
}

/* Frontmatter section on poem page */
.poem-frontmatter {
    background: var(--code-bg);
    border: 1px solid var(--border-color);
    padding: 1.5rem;
    border-radius: 8px;
    margin: 2rem 0 3rem 0;
    font-size: 0.9rem;
}

.poem-frontmatter h3 {
    margin-top: 0;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
}

.poem-frontmatter p {
    margin: 0.5rem 0;
    font-family: var(--font-mono);
    font-size: 0.85rem;
}

/* Tags */
.tags-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem 0.75rem;
    margin: 1.5rem 0;
}

.tag {
    display: inline-block;
    padding: 0.35rem 0.7rem;
    background: var(--code-bg);
    border: 1px solid var(--border-color);
    border-radius: 6px;
    color: var(--text-color);
    font-size: 0.85rem;
    text-decoration: none;
    font-family: var(--font-mono);
    transition: background-color 0.15s ease, border-color 0.15s ease;
}

.tag:hover {
    background: var(--border-color);
    border-color: var(--muted-color);
    text-decoration: none;
}

.tag-count {
    margin-left: 0.4em;
    color: var(--muted-color);
}

/* Pagination */
.pagination {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 3rem 0 2rem 0;
    padding-top: 2rem;
    border-top: 1px solid var(--border-color);
}

.pagination a {
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 500;
}

.pagination a:hover {
    text-decoration: underline;
}

.page-info {
    font-size: 0.9rem;
    color: var(--muted-color);
    font-family: var(--font-mono);
}

/* Breadcrumb */
.breadcrumbs {
    font-size: 0.85rem;
    color: var(--muted-color);
    margin-bottom: 1rem;
    font-family: var(--font-mono);
    letter-spacing: 0.1em;
}

.breadcrumbs a {
    color: var(--muted-color);
    text-decoration: none;
}

.breadcrumbs a:hover {
    text-decoration: underline;
}

/* Navigation links within main content */
.content-navigation {
    margin: 2rem 0;
    padding: 1rem 0;
    border-top: 1px solid var(--border-color);
    border-bottom: 1px solid var(--border-color);
    display: flex;
    justify-content: space-between;
    gap: 2rem;
}

.content-navigation a {
    flex: 1;
    padding: 1rem;
    background: var(--code-bg);
    border-radius: 6px;
    text-decoration: none;
    font-size: 0.9rem;
    color: var(--text-color);
}

.content-navigation a:hover {
    background: var(--border-color);
    text-decoration: none;
}

.content-navigation .nav-label {
    display: block;
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--muted-color);
    margin-bottom: 0.5rem;
}

.content-navigation .nav-title {
    font-weight: 600;
}

/* Footer */
.site-footer {
    padding: 2rem 0;
    margin-top: 4rem;
    border-top: 1px solid var(--border-color);
    text-align: center;
    font-size: 0.85rem;
    color: var(--muted-color);
}

/* Simple scroll indicators */
.manuscript-scroll {
    position: fixed;
    top: 0;
    left: 260px;
    right: 0;
    height: 3px;
    background: var(--border-color);
    pointer-events: none;
    z-index: 1000;
}

.manuscript-scroll-bar {
    height: 100%;
    width: 0%;
    background: var(--accent-color);
    transition: width 0.1s ease-out;
}

/* Mobile responsive */
@media (max-width: 768px) {
    body {
        flex-direction: column;
    }

    .background-decoration {
        display: none;
    }

    .sidebar {
        position: relative;
        width: 100%;
        height: auto;
        border-right: none;
        border-bottom: 1px solid var(--border-color);
        padding: 1.5rem 0;
    }

    .sidebar-header,
    .search-container,
    .sidebar-nav {
        padding: 0 1.5rem;
    }

    .sidebar-header {
        padding-bottom: 1rem;
        margin-bottom: 1rem;
        border-bottom: 1px solid var(--border-color);
    }

    .search-container {
        padding-bottom: 0;
        border-bottom: none;
        padding-top: 0;
        margin-bottom: 0.5rem;
        border-bottom: 1px solid var(--border-color);
    }

    .sidebar-nav {
        display: none;
    }

    .main-content {
        margin-left: 0;
        padding: 2rem 1rem;
        min-height: auto;
    }

    .content-wrapper {
        max-width: 100%;
    }

    h1 {
        font-size: 2rem;
    }

    h2 {
        font-size: 1.3rem;
    }

    .manuscript-scroll {
        left: 0;
    }
}

/* Code highlighting wrapper */
.code-block-work {
    position: relative;
}

.code-copy-btn {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    padding: 0.25rem 0.5rem;
    background: var(--bg-color);
    border: 1px solid var(--border-color);
    border-radius: 4px;
    font-size: 0.75rem;
    color: var(--text-color);
    cursor: pointer;
    opacity: 0.5;
    transition: opacity 0.2s;
}

.code-block-work:hover .code-copy-btn {
    opacity: 1;
}

/* Hide the search container on very small mobile */
@media (max-width: 480px) {
    .search-container {
        display: none;
    }
}

